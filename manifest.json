{
  "manifest_version": 3,
  "name": "LHDN Automation",
  "version": "1.0",
  "description": "Automate LHDN forms",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open LHDN Automation"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}